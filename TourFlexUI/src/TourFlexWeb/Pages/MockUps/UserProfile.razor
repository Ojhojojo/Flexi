<MudContainer Class="pa-4">
    <MudGrid>
        <MudItem xs="12">
            <MudText Typo="Typo.h6" GutterBottom="true">Badges</MudText>
            @foreach (var badge in Badges)
            {
                <MudChip T="string"  Color="badge.Color">@badge.Name</MudChip>
            }
        </MudItem>
        <MudItem xs="12" Class="mt-4">
            <MudText Typo="Typo.h6" GutterBottom="true">DRAFT Flags</MudText>
            @foreach (var flag in Flags)
            {
                <MudChip T="string" Color="flag.Color">@flag.Location</MudChip>
            }
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    [Parameter]
    public List<Badge> Badges { get; set; } = new List<Badge>();

    [Parameter]
    public List<Flag> Flags { get; set; } = new List<Flag>();
}