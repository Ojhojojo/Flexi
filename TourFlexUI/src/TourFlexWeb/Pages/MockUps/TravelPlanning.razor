
<MudContainer Class="pa-4">
    <MudText Typo="Typo.h6" GutterBottom="true">Travel Planning</MudText>
    <MudTextField @bind-Value="_destination" Label="Destination" Variant="Variant.Outlined" Class="mb-4" Placeholder="Enter destination" />
    <MudSelect T="string" Label="Interest" Variant="Variant.Outlined" @bind-Value="_interest" Class="mb-4">
        <MudSelectItem Value="@("Cultural Experiences")" />
        <MudSelectItem Value="@("Food Tours")" />
        <MudSelectItem Value="@("Relaxation")" />
        <MudSelectItem Value="@("Adventure")" />
    </MudSelect>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" OnClick="SubmitPlan">Get Suggestions</MudButton>
</MudContainer>

@code {
    private string _destination = "";
    private string _interest = "";

    [Parameter]
    public EventCallback<TravelPlan> OnPlanSubmitted { get; set; }

    private async Task SubmitPlan()
    {
        var plan = new TravelPlan { Destination = _destination, Interest = _interest };
        await OnPlanSubmitted.InvokeAsync(plan);
    }
}